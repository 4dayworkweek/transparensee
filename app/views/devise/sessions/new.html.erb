<body class="bg-gray-100 h-screen flex items-center justify-center">
  <div class="w-full max-w-xs">
    <div class="text-center mb-6">
      <h1 class="text-2xl font-medium">TransparenSee</h1>
    </div>
    <%= form_with(model: resource, local: true, url: session_path(resource_name)) do |form| %>
    <div class="mb-4">
      <label class="block text-gray-700 font-medium mb-2">Email</label>
      <%= form.email_field :email, class: "bg-gray-400 p-2 rounded-lg w-64" %>
    </div>
    <div class="mb-4">
      <label class="block text-gray-700 font-medium mb-2">Password</label>
      <%= form.password_field :password, class: "bg-gray-400 p-2 rounded-lg w-64" %>
    </div>
    <div class="text-center mt-6">
      <%= form.submit "Sign In", class: "bg-indigo-500 text-white p-2 rounded-lg hover:bg-indigo-600" %>
      <p class="text-center mt-4">New User? <%= link_to "Sign Up", new_user_registration_path %></p>
      <p class="text-center mt-2">Forgot your password? <%= link_to "Reset Password", new_user_password_path %></p>
    </div>
    <% end %>
  </div>
</body>
